package ifexample;

public class SeatsCal {

	public static void seatcal(int customer, int column){
		
		
		
		int row = customer/ column;
		int customer_remainer = 0;

		if(customer>= column) {
			if(customer % column != 0) {
				customer_remainer = customer % column;
				row += 1;
				
				

			}else {
				customer_remainer=0;
			}
		}
		System.out.println(row +"줄이 필요하고, " + customer_remainer + "자리가 남습니다.");
		
	}
}
