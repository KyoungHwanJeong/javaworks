package objectarray.dogs;

public class DogArray {

	public static void main(String[] args) {

		// Dog 인스턴스 4개를 생성해서 배열에 저장하고,
		// 정보를 출력하세요.(get()함수를 사용)
		
		Dog[] dog = {
				new Dog("백구", "진돗개"),
				new Dog("해피", "시츄"),
				new Dog("대박", "불독"),
				new Dog("사랑", "치와와"),
		};
		
		for(int i=0;i<dog.length;i++) {
			
			System.out.println(dog[i].getName() +", "+dog[i].getType());
		}
		System.out.println();
		
		for(int i=0;i<dog.length;i++) {
			dog[i].showDogInfo();
		}
		System.out.println("=====================================");
		
		for(Dog dogArr1: dog) {
			dogArr1.showDogInfo();
		}
		System.out.println();
		
		for(Dog dogArr2: dog) {
			System.out.println(dogArr2.showDogInfo2());
		}
	}

}
