package reference_2.subject2_2;

public class StudentTest2_2 {

	/*
	 * 객체 내용: 학번 101, 이름 김대한
	 * 			국어 90점, 수학 85점, 과학 78점
	 * 
	 * subject 클래스의 정의
	 * 			- private로 과목이름, 과목점수를 선언하고,
	 * 			- get(),set()함수로 입출력 함수를 정의
	 * 
	 * student 클래스의 정의
	 * 			- 학번, 이름
	 * 			- 과목 수를 배열로,,,
	 * 			- 과목을 추가하면 배열에 추가되고,
	 * 			배열의 요소가 비어 있을 때만 저장된다.
	 * 
	 *  학생 정보에서 총점과 평균을 출력하기.
	 */
	
	public static void main(String[] args) {

		Student2_2 stu1= new Student2_2(101, "김대한");
		stu1.addSubject("국어", 90);
		stu1.addSubject("수학", 85);
		stu1.addSubject("과학", 78);
		stu1.showStudent2_2Info();
		
	}

}
