package data;

public class Var {

	
	public static void main(String[] args) {
		
		// 변수를 사용
		// 변수 선언 방법 : 자료형 변수이름
		double year = 2023;		// 정수 자료형 변수 year를 선언함, 2023을 대입
	
		System.out.println(year+"년");	// 숫자와 문자 더하기(연결하기)
	
		
		int month = 9, day=5;			// 변수의 초기화(선언과 동시에 값을 대입한다)
		
		System.out.println(month+"월");
		System.out.println(day+"일");
		
		
		// 손흥민은 3학년 2반입니다.
		// 변수 - 이름, 학년, 반
		String str="손흥민";
		int grade=3, floor=2;
		
		System.out.println(str+"은 "+grade+"학년 "+floor+"반 입니다");
		
	}
}
