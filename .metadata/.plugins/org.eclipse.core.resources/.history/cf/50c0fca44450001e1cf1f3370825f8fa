package classes;


//참조(reference) 자료형
public class Student {

	// 클래스 내부에서는 변수를 필드라고 한다.(필드 - field)
	String studentName;		// 학생이름("홍길동")
	int studentId;			// 학번(101)
	int grade;				// 학년
	
	// 학생의 정보를 출력하는 함수 method
	public void showStuendInfo(String name, int id, int grade) {
		System.out.println("학생이름: "+ name + ", 학번: " + id
				+ "학년: " +grade);
	}
	
}
