package operator;

public class OperatorEx1 {

	public static void main(String[] args) {
		
		// 산술연산자(변수 사용)
		// 계산의 결과는 기본이 정수형이 됨
		// 자바의 기본형은 int와 double

		System.out.println(4+8);	// 11
		System.out.println(4-8);	// -3
		System.out.println(4*8);	// 28
		System.out.println((double)4/8);// 11, 형 변환(type conversion)
		
		System.out.println("================");
		
		// 산술 연산자(변수 사용)
		
		int num1=4, num2=8;
		System.out.println(num1 + num2);
		System.out.println(num1 - num2);
		System.out.println(num1 * num2);
		System.out.println((double)num1 / num2);
		
		
		
		// 점수의 합계, 평균
		int korScore = 90, mathScore= 80;
		int sumScore =0;
		double avgScore = 0.0;
		
		sumScore = korScore + mathScore;
		avgScore = sumScore/2;
		
		System.out.println("총점: "+sumScore);
		System.out.println("평균: "+avgScore);
		
//		class sumScore(korScore, mathScore) {
//			return (korScore+mathScore);

		}
		
	}
	

