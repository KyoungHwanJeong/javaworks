package reference.circle;

public class Circle {

	int x,y;	// Point center = null
	int radius;
	Point center;
	
	public Circle(int x, int y, int radius){
		this.x=x;
		this.y=y;
		this.radius=radius;
		}
	
	public Circle(int radius) {
		this.radius=radius;
		Point point;
	}
	
	public void showCircleInfo() {
		System.out.println("원의 중심은 (" + x + ", " + y +") 이고, "
				+ "반지름은 "+ radius + "입니다.");
	}
	public void showCircleInfo2() {
		System.out.println(point);
	}
}
