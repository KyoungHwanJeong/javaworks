package classes.constructor;

// 참조 자료형 - Person 클래스 정의
public class Person {

	String name;	// 사람의 이름
	float height;	// 키
	float weight;	// 몸무게
	
	// 기본 생성자
	public Person() {
		
	}
	public void showPersonInfo() {
		System.out.printf("이름: %s\t, 키: %f\t, 몸무게: %f\n", name
				, height, weight);
	}
	
}
