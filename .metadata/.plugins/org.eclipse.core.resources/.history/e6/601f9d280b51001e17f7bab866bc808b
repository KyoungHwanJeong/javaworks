package kr.or.iei.model;

//회원 클래스(자료형) 정의
public class User {

	// 필드(속성)
	private String id;
	private String pwd;
	private String name;
	
	public User() {

	}
	
	//set()+필드이름() - 입력, get()+필드이름() - 출력
	public void setId(String id) {
		this.id= id;
	}
	public void setPwd(String pwd) {
		this.pwd= pwd;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getId() {
		return id;
	}
	public String getPwd() {
		return pwd;
	}
	public String getName() {
		return name;
	}
	
	public User(String id, String pwd, String name) {
		this.id= id;
		this.pwd=pwd;
		this.name=name;
	}
	
	public void showUser1Info(String id, String pwd, String name) {
		System.out.println("아이디: " + (this.id= id));
		System.out.println("비밀번호: " + (this.pwd= pwd));
		System.out.println("이 름: " + (this.name= name));
	}
	
	
}
